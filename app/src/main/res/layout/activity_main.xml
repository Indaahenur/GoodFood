<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/rectangleatas" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:layout_marginTop="100sp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/makanan" />

            <TextView
                android:id="@+id/txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GOOD FOOD"
                android:textSize="24sp"
                android:textStyle="italic"
                android:textAlignment="center"
                android:layout_marginTop="20sp"
                />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100sp"
                android:layout_marginTop="80sp"
                app:srcCompat="@drawable/rectangle" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mau makan apa hari ini..."
                android:layout_below="@+id/txt"
                android:textSize="15sp"
                android:layout_marginLeft="120sp"
                android:layout_marginTop="35sp"
                />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/search"
                android:scaleType="centerCrop"
                android:layout_marginTop="85sp"
                android:layout_marginLeft="280sp"
               />

        </RelativeLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Makanan"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="15sp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvmakanan"
            android:layout_width="match_parent"
            android:layout_height="180sp"
            android:layout_marginTop="10sp"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minuman"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="15sp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMinuman"
            android:layout_width="match_parent"
            android:layout_height="180sp" />

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="97sp"
            android:background="@drawable/rectangle4">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/home"
                android:layout_marginLeft="70sp"
                android:layout_centerVertical="true"/>

            <ImageView
                android:id="@+id/btnEkplor5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/compass"
                android:layout_marginLeft="180sp"
                android:layout_centerVertical="true"/>

            <ImageView
                android:id="@+id/btnProfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/user"
                android:layout_marginLeft="300sp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>


    </LinearLayout>
</RelativeLayout>