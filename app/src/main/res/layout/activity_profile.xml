<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/rectangleatas"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GOOD FOOD"
                android:textAlignment="center"
                android:textStyle="italic"
                android:textSize="24sp"
                android:layout_marginTop="25sp"/>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25sp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/rectangelprofile" />

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/gambar"
                    android:layout_marginTop="25sp"
                    android:layout_marginLeft="38sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Indah Nurjanah"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="170sp"
                        android:layout_marginTop="35sp"/>

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="indaahnur@gmail.com"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="150sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lihat Profil"
                        android:textColor="#75B3FB"
                        android:textSize="15sp"
                        android:layout_marginTop="15sp"
                        android:layout_marginLeft="300sp"/>
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp">

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/recycle" />

            <TextView
                android:id="@+id/riwayat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Riwayat Pesanan"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="15sp"
                android:layout_marginLeft="50sp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRiwayat"
                android:layout_width="match_parent"
                android:layout_height="350sp"
                android:layout_marginLeft="30sp"
                android:layout_marginRight="30sp"
                android:layout_marginTop="15sp"
                android:layout_below="@id/riwayat"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="50sp"
            android:layout_width="match_parent"
            android:layout_height="97sp"
            android:background="@drawable/rectangle4">

            <ImageView
                android:id="@+id/btnprofilhome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/homebiasa"
                android:layout_marginLeft="90sp"
                android:layout_centerVertical="true"/>

            <ImageView
                android:id="@+id/btnEkplor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/compass"
                android:layout_marginLeft="200sp"
                android:layout_centerVertical="true"/>

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/userhijau"
                android:layout_marginLeft="320sp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>